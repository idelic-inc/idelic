{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "esModuleInterop": true,
    "module": "commonjs",
    "declaration": true,
    "skipLibCheck": true,
    "jsx": "react",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "./lib",
    "strict": true,
    "lib": ["es2015", "es2016", "dom", "es2018.promise"]
  },
  "include": ["packages/*/src", "packages/*/scripts"],
  "exclude": ["node_modules"]
}
